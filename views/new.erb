<h1>Add New Post</h1>

<% if @message %>
  <span style="color: red;"><%= @message %></span>
  <br>
<% end %>

<form action='new' method='post'>
  <input type="text" name="author" class="form-control" placeholder="Type author name" value="<%= @author %>">
  <br>
  <textarea name="content" rows="6" class="form-control" placeholder="Type post text here"><%= @content %></textarea>
  <br>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
